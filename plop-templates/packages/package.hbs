      "dist/",
      "src/data/",
      "src/types/",
      "src/e2e/",
      "src/styles/"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    }
  },
  "eslintConfig": {
    "root":true,
    "extends": [
      "config/eslint-preset"
    ]
  }
