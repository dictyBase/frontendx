  "devDependencies": {
    "@types/jest": "^26.0.x",
    "@types/react": "^17.x",
    "@types/react-dom": "^17.x",
    "@testing-library/jest-dom": "^5.x",
    "@testing-library/react": "^13.x",
    "@testing-library/user-event": "^14.x",
    "prettier": "^2.x",
    "jest": "^26.x",
    "tsup": "^6.x",
    "tsconfig": "*",
    "eslint-config-custom": "*",
    "@swc/core": "^1.x",
