{
  "name": "dicty-graphql-schema",
  "version": "0.0.0",
  "description": "GraphQL schema and typings for the dictyBase API.",
  "main": "./generated/index.ts",
  "private": true,
  "scripts": {
    "generate": "graphql-codegen",
    "lint": "eslint src/"
  },
  "author": "Siddhartha Basu <siddhartha-basu@northwestern.edu>",
  "license": "BSD-2-Clause",
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "*.graphql"
        ],
        "extends": "plugin:@graphql-eslint/schema-recommended",
        "parserOptions": {
          "schema": "./src/schema/*.graphql"
        },
        "rules": {
          "@graphql-eslint/require-description": "off",
          "spaced-comment": "off",
          "@graphql-eslint/no-hashtag-description": "off",
          "@graphql-eslint/strict-id-in-types": [
            "error",
            {
              "acceptedIdNames": [
                "id",
                "taxonId",
                "pubmedId",
                "dictybaseId"
              ],
              "acceptedIdTypes": [
                "ID",
                "String",
                "NameWithLink"
              ],
              "exceptions": {
                "types": [
                  "ProteinInformation",
                  "ProductInformation",
                  "AssociatedSequences",
                  "Phenotype",
                  "Author",
                  "Auth",
                  "Logout",
                  "UserList",
                  "OrderListWithCursor",
                  "StrainListWithCursor",
                  "PlasmidListWithCursor",
                  "NumberOfPublicationsWithGene",
                  "GeneralInfo",
                  "GenomicCoordinates",
                  "Download",
                  "DownloadItem",
                  "Links",
                  "NameWithLink"
                ]
              }
            }
          ]
        }
      }
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.7.16",
    "graphql": "~16.7.1",
    "graphql-tag": "^2.12.6",
    "react": "17.x",
    "react-dom": "17.x"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "4.0.1",
    "@graphql-codegen/fragment-matcher": "^4.0.1",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-apollo-client-helpers": "^2.2.6",
    "@graphql-codegen/typescript-msw": "^1.1.6",
    "@graphql-codegen/typescript-operations": "4.0.1",
    "@graphql-codegen/typescript-react-apollo": "3.3.7",
    "@graphql-eslint/eslint-plugin": "^3.20.0",
    "@types/node": "^18.16.0",
    "@types/react": "17.x",
    "@types/react-dom": "17.x",
    "tsconfig": "*"
  }
}
