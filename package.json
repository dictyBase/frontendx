{
  "name": "frontendx",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "rm -rf node_modules && yarn install",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "doc:build": "typedoc --tsconfig typedoc-tsconfig.json",
    "doc:watch": "typedoc --tsconfig typedoc-tsconfig.json --watch",
    "create:package": "plop package",
    "create:app": "plop app"
  },
  "devDependencies": {
    "plop": "^3.x",
    "prettier": "^2.x",
    "turbo": "^1.x",
    "typedoc": "^0.x"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "eslintConfig": {
    "extends": [
      "custom"
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "bracketSameLine": true
  }
}
